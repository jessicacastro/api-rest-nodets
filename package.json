{
  "name": "api-rest-node",
  "version": "1.0.0",
  "author": "Jessica Castro",
  "description": "API REST with Node.js and TypeScript made in Ignite from Rocketseat",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src --ext .ts --fix",
    "knexDev": "node --no-warnings --loader tsx ./node_modules/.bin/knex",
    "migrate": "npm run knexDev migrate:latest",
    "migrate:create": "npm run knexDev migrate:make",
    "migrate:rollback": "npm run knexDev migrate:rollback",
    "test": "vitest",
    "build": "tsup src --out-dir build"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.14.1",
    "knex": "^2.4.2",
    "pg": "^8.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "sqlite3": "^5.1.6",
    "@rocketseat/eslint-config": "^1.2.0",
    "@types/node": "^18.15.3",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.36.0",
    "supertest": "^6.3.3",
    "tsup": "^6.7.0",
    "tsx": "^3.12.5",
    "typescript": "^5.0.2",
    "vitest": "^0.29.7"
  }
}
